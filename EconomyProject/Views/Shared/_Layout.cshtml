@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EconomyProject</title>
	<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
	

</head>
<body>
    <header>
	<!--- Navbar --->
	<nav class="navbar navbar-expand-lg">
		<div class="container">
			<a class="navbar-brand text-white" href="#"><i class="fa fa-graduation-cap fa-lg mr-2"></i>EKONOMIM</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nvbCollapse" aria-controls="nvbCollapse">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="nvbCollapse">
				<ul class="navbar-nav ml-auto">
					<li class="nav-item pl-1">
						<a class="nav-link" href="https://localhost:44345/Home/Index"><i class="fa fa-home fa-fw mr-1"></i>Anasayfa</a>
					</li>
					@if(Accessor.HttpContext.Session.Get("username")!=null){
						<li class="nav-item pl-1">
							<a class="nav-link" href="#"><i class="fa fa-user-plus fa-fw mr-1"></i> @Accessor.HttpContext.Session.GetString("username")</a>
						</li>
						<li class="nav-item pl-1">
							<a class="nav-link" href="https://localhost:44345/Login/Index"><i class="fa fa-user-plus fa-fw mr-1"></i>Çıkış Yap</a>
						</li>
					}
					else{
							<li class="nav-item pl-1">
								<a class="nav-link" href="https://localhost:44345/SignUp/Index"><i class="fa fa-user-plus fa-fw mr-1"></i> Kayıt Ol</a>
							</li>
							<li class="nav-item pl-1">
								<a class="nav-link" href="https://localhost:44345/Login/Index"><i class="fa fa-sign-in fa-fw mr-1"></i>Oturum Aç</a>
							</li>
					}	
					
					
				</ul>
			</div>
		</div>
	</nav>
	<!--# Navbar #-->
	</header>
    
            @RenderBody()

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - EconomyProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
