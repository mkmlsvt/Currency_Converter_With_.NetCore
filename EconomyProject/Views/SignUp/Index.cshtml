
@{
    Layout = null;
}


@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> 
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/signUp.css" />
<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <img src="~/images/economy.png"
                    style="width: 185px;" alt="logo">
                    <br />
                    <br />
                  <h4 class="mt-1 mb-5 pb-1">Biz EKONOMİM'iz :)</h4>
                </div>

                <form method="post" asp-controller="SignUp" asp-action="Index">          

                  <div class="form-outline mb-4">
                    <input type="text" id="form2Example11" class="form-control" name="Username" required
                      placeholder="Kullanıcı Adı" />                  
                  </div>

                  <div class="form-outline mb-4">
                    <input type="password" id="form2Example22" class="form-control" placeholder="Parola" name="Password" required/>                  
                  </div>

                   <div class="form-outline mb-4">
                       
                    <input type="text" id="form2Example11" class="form-control" name="verifyPassword" required
                      placeholder="Parola Tekrar" />
                      <br />
                      <span class="badge badge-danger">@(ViewBag.errorVerify ?? String.Empty)</span>
                  </div>

                  <div class="text-center pt-1 mb-5 pb-1">
                    <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit"> Kayıt Ol </button>                  
                  </div>
                  <div class="d-flex align-items-center justify-content-center pb-4">
                    <p class="mb-0 me-2">Zaten bir hesabın var mı ?</p>
                    <button type="button" class="btn btn-outline-danger" onclick="location.href='https://localhost:44345/Login/Index'">Giriş yap</button>
                  </div>
                </form>

              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center " style="background-color:lightblue">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                <h4 class="mb-4">Ekonomim sitemize kayıt olmayı seçtiğin için teşekkür ederiz...</h4>
                <p class="small mb-0">Kullancıların rahatlıkla erişebilidiği, kullanıcı dostu bir döviz çevirme sitesiyiz. Tek yapman gerekn 2 para kodu girip butona tıklaman.. </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

 <script src="~/lib/jquery/dist/jquery.min.js"></script>
 <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
 <script src="~/js/site.js" asp-append-version="true"></script>
